{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "FastApi: runserver",
            "type": "shell",
            "command": "uvicorn",
            "args": [
                "app.main:app",
                "--host=0.0.0.0",
                "--reload",
            ],
            "options": {
                "cwd": "${workspaceFolder}/",
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Flake8",
            "type": "shell",
            "command": "flake8",
            "options": {
                "cwd": "${workspaceFolder}/app/",
            }
        }
    ]
}
